{
  "functions": {
    "api/proxy.js": {
      "runtime": "nodejs20.x",
      "memory": 128,
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/corsdemo",         "dest": "/api/proxy" },

    { "src": "^/https:/(.*)$",    "dest": "/api/proxy?url=https://$1" },
    { "src": "^/http:/(.*)$",     "dest": "/api/proxy?url=http://$1" },

    { "src": "^/api/(.*)$",       "dest": "/api/proxy?url=$1" },
    { "src": "^/api$",            "dest": "/api/proxy" }
  ]
}
