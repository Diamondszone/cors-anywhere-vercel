{
  "functions": {
    "api/[...proxy].js": {
      "runtime": "nodejs18.x",
      "memory": 128,
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/corsdemo", "destination": "/api/corsdemo" },

    // Gaya ASLI: root menangkap http(s)://
    { "source": "/https:/(.*)", "destination": "/api/https://$1" },
    { "source": "/http:/(.*)", "destination": "/api/http://$1" },

    // Tetap izinkan akses langsung ke /api/*
    { "source": "/api/(.*)", "destination": "/api/$1" },

    // Fallback query style: /api?url=...
    { "source": "/api", "destination": "/api" }
  ]
}
